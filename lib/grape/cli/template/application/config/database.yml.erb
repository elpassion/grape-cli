default: &default
  adapter: postgresql
  encoding: unicode
  username: <%= ENV['DATABASE_USERNAME'] %>
  password: <%= ENV['DATABASE_PASSWORD'] %>
  pool: 5

development:
  <<: *default
  database: <%= app_name %>_api_development

test:
  <<: *default
  database: <%= app_name %>_api_test

production:
  url: <%= ENV['DATABASE_URL'] %>
